<Window x:Class="ValtioClient.StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VALTIO" Height="160" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Connect to target server" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="serverIP" HorizontalAlignment="Left" Height="23" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="serverPort" HorizontalAlignment="Left" Height="23" Margin="215,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="connectBtn" Content="Connect" HorizontalAlignment="Left" Margin="290,84,0,0" VerticalAlignment="Top" Width="75" Click="connectBtn_Click"/>
        <Label Content="IP address" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="215,58,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
